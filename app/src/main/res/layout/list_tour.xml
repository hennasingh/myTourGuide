<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/padding_5dp">

    <ImageView
        android:id="@+id/tour_icon"
        android:layout_width="@dimen/width_120"
        android:layout_height="@dimen/height_120"
        tools:background="@drawable/placeholder_image"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_12">

        <TextView
            android:id="@+id/tour_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tour_name"
            android:textSize="@dimen/text_14"
            android:layout_marginBottom="@dimen/margin_10"
            tools:text="Dublin to Galway"/>

        <TextView
            android:id="@+id/tour_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tour_time"
            android:textSize="@dimen/text_14"
            android:layout_marginBottom="@dimen/margin_10"
            tools:text="@string/placeholder_tourTime"/>

        <TextView
            android:id="@+id/tour_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_14"
            tools:text="@string/placeholder_tourcost"/>

    </LinearLayout>

        <RatingBar
            android:id="@+id/rating_stars"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            tools:rating="3"
            android:layout_gravity="top"
            android:stepSize="1"/>


 </LinearLayout>